<controls:ESWarehouseManifestWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._ES.Cargo.Storeroom.Ui"
    xmlns:graphics="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    xmlns:xNamespace="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:style="clr-namespace:Content.Client.Stylesheets"
    MinSize="400 300"
    SetSize="440 650"
    Title="{Loc 'es-warehouse-manifest-ui-title'}">
    <BoxContainer Orientation="Vertical" HorizontalExpand="True" VerticalExpand="True" Margin="10 5 10 10">
        <BoxContainer Orientation="Horizontal">
            <LineEdit Name="FilterEdit" PlaceHolder="{Loc 'es-warehouse-manifest-placeholder'}" HidePlaceHolderOnFocus="True" HorizontalExpand="True"/>
            <Button Name="ResetButton" Text="{Loc 'es-warehouse-manifest-clear-button-label'}" StyleClasses="OpenLeft"/>
        </BoxContainer>
        <Control MinHeight="10"/>
        <PanelContainer HorizontalExpand="True" VerticalExpand="True">
            <PanelContainer.PanelOverride>
                <graphics:StyleBoxFlat BackgroundColor="{xNamespace:Static style:StyleNano.PanelDark}" />
            </PanelContainer.PanelOverride>
            <ScrollContainer HorizontalExpand="True" VerticalExpand="True" HScrollEnabled="False" ReserveScrollbarSpace="True">
                <GridContainer Name="EntryContainer" Columns="1" VSeparationOverride="5" HorizontalExpand="True" VerticalExpand="True" Margin="10 10 0 0"/>
            </ScrollContainer>
        </PanelContainer>
    </BoxContainer>
</controls:ESWarehouseManifestWindow>
